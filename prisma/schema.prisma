generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id          String   @id @default(cuid())
  whopUserId  String   @unique
  businessId  String                 // tie members back to their creator
  email       String?  @unique
  name        String?
  status      String   @default("invalid") // valid | invalid | canceled_at_period_end
  productId   String?
  planName    String?
  lastEventId String?  @unique
  lastActiveAt DateTime?             // when they were last active
  isAtRisk    Boolean  @default(false) // churn risk flag
  riskReason  String?                // why they're at risk
  lastEmailSent DateTime?            // when we last sent retention email
  emailCount  Int      @default(0)   // how many retention emails sent
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
