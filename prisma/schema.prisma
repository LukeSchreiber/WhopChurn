generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id          String   @id @default(cuid())
  whopId      String   @unique
  email       String?
  username    String?
  status      String?     // e.g. active, past_due, canceled
  plan        String?
  riskFlag    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([email])
  @@index([status])
}
