# Database
DATABASE_URL="postgresql://user:password@localhost:5432/churnguard"

# Whop API Configuration
WHOP_API_KEY="your_whop_api_key_here"

# Webhook Security
WEBHOOK_SECRET="your_webhook_secret_here"

